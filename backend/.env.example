# Configuración de Base de Datos
# Para Heroku (PostgreSQL): Heroku lo provee automáticamente
# Para desarrollo local: postgresql://usuario:contraseña@localhost:5432/smartrehabbar
# Para Raspberry Pi (SQLite): file:./dev.db
DATABASE_URL="postgresql://localhost:5432/smartrehabbar"

# Configuración del Servidor
NODE_ENV="development"
PORT=5000

# CORS
CORS_ORIGIN="http://localhost:3000"

# Configuración del Sistema (opcional)
WEIGHT_THRESHOLD_START=5
WEIGHT_THRESHOLD_END=3
SYNC_WINDOW_MS=3000
DISPLAY_STEPS=20
BALANCE_GOOD_PERCENT=10
BALANCE_WARNING_PERCENT=20

